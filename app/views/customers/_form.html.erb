<% customer.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>

<%= form_with model: customer, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :document %>
  <%= f.text_field :document %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit 'Enviar' %>
<% end %>
