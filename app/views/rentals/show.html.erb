<h1>Locação <%= @rental.id %></h1>

<%= render @rental %>

<% if @rental.car_rental %>
  <h2>Locação em andamento</h2>
  <span>Carro escolhido: </span><%= @rental.car_rental.car.information %><br/>
  <span>CNH do condutor: </span><%= @rental.car_rental.driver_license_number %><br/>
  <span>Iniciada por: </span><%= "#{@rental.car_rental.user.name} (#{@rental.car_rental.user.email})" %><br/>
  <span>Em: </span><%= l @rental.car_rental.start_date, format: :short %>

<% else %>
  <%= link_to  "Iniciar locação", new_rental_car_rental_path(@rental) %>
<% end %>

<%= link_to  "Voltar", rentals_path %>