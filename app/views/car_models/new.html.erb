<% @car_model.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: @car_model, local: true do | f | %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :year %>
  <%= f.number_field :year %>
  <%= f.label :manufacturer %>
  <%= f.text_field :manufacturer %>
  <%= f.label :motorization %>
  <%= f.text_field :motorization %>
  <%= f.label :fuel_type %>
  <%= f.text_field :fuel_type %>
  <%= f.label :car_category_id %>
  <%= f.collection_select(:car_category_id, @car_categories, :id, :name, prompt: 'Escolha uma categoria de carro') %>
  <%= f.submit 'Enviar' %>
<% end %>